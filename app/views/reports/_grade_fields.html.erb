  <td><%= f.text_field :price, :size=>"10"  %></td>


  <td><%= f.text_field :description, :size=>"20"  %></td>


  <td>
	<div id="trend_container">
		
		<span id="trend_up" class="trend_selector" title="1">UP</span>

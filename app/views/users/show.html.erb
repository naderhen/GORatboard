<fieldset>
<legend>Market Reports</legend>
</fieldset>
<table class="stylized full">
	<thead>
		<tr>
	    	<th>Report Date</th>
			<th>Date</th>
	  	</tr>
	</thead>
	
	<tbody>
		<% for report in @user.reports %>
		<tr>
			<td><%= report.report_date%></td>
			<td><%= link_to 'Show', report %></td>
		</tr>
		<% end %>

		
	</tbody>
</table>


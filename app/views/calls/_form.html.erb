<%= content_for :headline do %>
<h1>New Call &rarr; <span><%=@customer.name %></span></h1>
<% end %>



<%= form_for [@customer, @call] do |f| %>

  <% if @call.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@call.errors.count, "error") %> prohibited this call from being saved:</h2>

      <ul>
      <% @call.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	
<%= f.hidden_field :user_id, :value=>current_user.id %>
  <div class="field">
    <%= f.label :call_time %><br />
    <%= f.datetime_select :call_time %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
